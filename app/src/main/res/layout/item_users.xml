<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivUserProfileImage"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285"
        tools:srcCompat="@drawable/baseline_account_circle_24" />

    <Button
        android:id="@+id/btnYasakla"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:text="Yasakla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnYetkilendir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Yetkilendir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnYasakla"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnYasakla"
        app:layout_constraintTop_toBottomOf="@+id/btnYasakla"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="4dp"
        android:text="active"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserProfileImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="role"
        app:layout_constraintBottom_toTopOf="@+id/tvActive"
        app:layout_constraintEnd_toEndOf="@+id/tvActive"
        app:layout_constraintStart_toStartOf="@+id/tvActive" />

    <TextView
        android:id="@+id/tvEposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eposta"
        app:layout_constraintBottom_toTopOf="@+id/tvRole"
        app:layout_constraintEnd_toEndOf="@+id/tvRole"
        app:layout_constraintStart_toStartOf="@+id/tvRole"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="@color/my_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnYetkilendir" />

</androidx.constraintlayout.widget.ConstraintLayout>